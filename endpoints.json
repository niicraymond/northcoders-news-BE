{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles",
    "exampleResponse": {
      "articles": [
        {
          "author": "weegembump",
          "title": "Seafood substitutions are increasing",
          "article_id": 1,
          "topic": "cooking",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "article_img_url": "https://image.jpg",
          "comment_count": 6
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "serves an article object with the specified article_id",
    "exampleResponse": {
      "article": {
        "author": "weegembump",
        "title": "Seafood substitutions are increasing",
        "article_id": 1,
        "body": "Seafood article text body",
        "topic": "cooking",
        "created_at": "2018-05-30T15:59:13.341Z",
        "votes": 0,
        "article_img_url": "https://image.jpg"
      }
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "serves an array of comments for the specified article_id",
    "exampleResponse": {
      "comments": [
        {
          "comment_id": 1,
          "votes": 10,
          "created_at": "2018-05-30T15:59:13.341Z",
          "author": "nameofauthor",
          "body": "Seafood article text body",
          "article_id": 1
        }
      ]
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "posts a comment on an article",
    "exampleResponse": {
      "comment": {
        "comment_id": 1,
        "article_id": 1,
        "body": "nicolescomment",
        "votes": 1,
        "author": "nicole123",
        "created_at": "2018-05-30T15:59:13.341Z"
      }
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "updates an article by article_id",
    "exampleResponse": {
      "article": {
        "author": "weegembump",
        "title": "Seafood substitutions are increasing",
        "article_id": 1,
        "body": "Seafood article text body",
        "topic": "cooking",
        "created_at": "2018-05-30T15:59:13.341Z",
        "votes": 0,
        "article_img_url": "https://image.jpg"
      }
    }
  },
  "DELETE /api/comments/:comment_id": {
    "description": "delete the given comment by comment_id",
    "exampleResponse": {}
  },
  "GET /api/users": {
    "description": "gets all users",
    "exampleResponse": {
      "users": [
        {
          "username": "butter_bridge",
          "name": "jonny",
          "avatar_url": "https://www.healthytherapies.com/wp-content/uploads/2016/06/Lime3.jpg"
        }
      ]
    }
  }
}
